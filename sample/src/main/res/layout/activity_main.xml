<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backkkkk"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.toptoche.sample.MainActivity">

    <LinearLayout
        android:id="@+id/llTagNo"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/transparent_bg_bordered"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTagNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorWhite"
            android:text="Select Tag Number"
            android:textStyle="normal"
            android:theme="@style/MatchSpinnerTheme" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_drop_down" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/save_button_Claim_Info__activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_margin="5dp"
        android:background="@drawable/transparent_bg_bordered"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Next"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
            android:textColor="@android:color/white"
            android:textStyle="normal" />
    </LinearLayout>


</LinearLayout>
